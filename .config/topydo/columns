[All tasks]
title = All tasks
sortexpr = desc:importance
show_all = 0

[Overdue]
title = Overdue
filterexpr = due:<today
sortexpr = desc:due
show_all = 1

[Due today]
title = Due today
filterexpr = due:today
sortexpr = desc:importance
show_all = 1

[Due in the next week]
title = Due in the next week
filterexpr = due:>=today due:<=1w
sortexpr = desc:importance
show_all = 1

[Shopping List]
title = Shopping List
filterexpr = +shopping-list
sortexpr = desc:importance
show_all = 1

[Messages]
title = Messages
filterexpr = @messages
sortexpr = asc:due
show_all = 1
