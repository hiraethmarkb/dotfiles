[All tasks]
title = All tasks
sortexpr = desc:importance
show_all = 0

[Shopping List]
title = Shopping List
filterexpr = +shopping-list
sortexpr = desc:importance
show_all = 1

[Important]
title = Important
filterexpr = @important
sortexpr = asc:due
show_all = 1

[Old Place]
title = Old Place
filterexpr = @oldplace
sortexpr = asc:due
show_all = 1

[New Place]
title = New Place
filterexpr = @newplace
sortexpr = asc:due
show_all = 1

[Overdue]
title = Overdue
filterexpr = due:<today
sortexpr = desc:due
show_all = 1

[Due today]
title = Due today
